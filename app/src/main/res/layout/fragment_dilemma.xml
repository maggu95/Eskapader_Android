<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:visibility="visible">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4362B5">


        <TextView
            android:id="@+id/dilemma_overskrift"
            android:layout_width="195dp"
            android:layout_height="0dp"
            android:layout_marginTop="29dp"
            android:layout_marginBottom="41dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Dilemma"
            android:textColor="@color/whitesmoke"
            android:textSize="40sp"
            app:layout_constraintBottom_toTopOf="@+id/statestikk1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dill_alt_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="38dp"
            android:layout_marginEnd="38dp"
            android:layout_marginBottom="41dp"
            android:layout_weight="1"
            android:background="@drawable/dillemma_rounded_borders"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:radius="2dp"
            android:text="@string/dilemmatekst1_1"
            android:textColor="@color/black"
            android:textSize="24dp"
            app:layout_constraintBottom_toTopOf="@+id/dill_alt_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/statestikk2" />

        <TextView
            android:id="@+id/dill_alt_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="38dp"
            android:layout_marginEnd="38dp"
            android:layout_marginBottom="38dp"
            android:layout_weight="1"
            android:background="@drawable/dillemma_rounded_borders"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="@string/dilemmatekst1_2"
            android:textColor="@color/black"
            android:textSize="24dp"
            app:layout_constraintBottom_toTopOf="@+id/btNesteDilemma"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dill_alt_1" />

        <Button
            android:id="@+id/btNesteDilemma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="62dp"
            android:text="Neste"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dill_alt_2"
            tools:visibility="invisible" />

        <TextView
            android:id="@+id/statestikk1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/statestikk2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dilemma_overskrift"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/statestikk2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="37dp"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/dill_alt_1"
            app:layout_constraintStart_toStartOf="@+id/statestikk1"
            app:layout_constraintTop_toBottomOf="@+id/statestikk1"
            tools:visibility="visible" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>